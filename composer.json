{
    "name": "x1nfly/jwt",
    "homepage": "https://github.com/x1nfly/php-jwt",
    "description": "A basic library to encode and decode JSON Web Tokens (JWT) in PHP, conforming to RFC 7519.",
    "keywords": ["JWT", "JSON", "SSO", "Token"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "x1nfly",
            "email": "stephenfxl@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">= 7.2.0",
        "ext-openssl": "*"
    },
    "autoload": {
        "psr-4": {
            "X1nfly\\JWT\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
    "autoload-dev": {
        "psr-4": {
            "X1nfly\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --testdox tests"
    }
}
